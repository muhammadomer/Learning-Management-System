    ViewBag.PageTitle = "Sign In";
    Layout = "~/Areas/Scale/Views/Shared/_LayoutScale.cshtml";
    ViewBag.PageName = "sign-in";
    ViewBag.ParentPageName = "ui";
    //Content title area
    ViewBag.ContentTitle = "Sign In";
    ViewBag.ContentTitleDesc = " ";
}

@section Scripts{

}
  <section class="m-t-lg wrapper-md animated fadeInUp">    
    <div class="container aside-xl">
      <a class="navbar-brand block" href="index.html">Scale</a>
      <section class="m-b-lg">
        <header class="wrapper text-center">
          <strong>Sign in to get in touch</strong>
        </header>
        <form action="#">
