@using HUC.Web.Models
@model HUC.Web.App.Testimonials.TestimonialAddModel

@{
    ViewBag.PageData = new PageDataModel
    {
        Title = "Testimonials",
        ContentTitle = "Testimonials",
        ContentTitleDesc = "Create a testimonial",
        ActivePage = "testimonials",
        Breadcrumb = new List<BreadcrumbItem>
        {
            new BreadcrumbItem("Testimonials", Url.Action("Index"), "fa-thumbs-up"),
            new BreadcrumbItem("Create")
        }
    };
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal edit-create-form">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.BodyCopy)
            <div class="input-field">
                @Html.TextAreaFor(model => model.BodyCopy)
                @Html.ValidationMessageFor(model => model.BodyCopy)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CompanyName)
            <div class="input-field">
                @Html.EditorFor(model => model.CompanyName)
                @Html.ValidationMessageFor(model => model.CompanyName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FullName)
            <div class="input-field">
                @Html.EditorFor(model => model.FullName)
                @Html.ValidationMessageFor(model => model.FullName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JobTitle)
            <div class="input-field">
                @Html.EditorFor(model => model.JobTitle)
                @Html.ValidationMessageFor(model => model.JobTitle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsShowOnHomepage)
            <div class="input-field">
                @Html.EditorFor(model => model.IsShowOnHomepage)
                @Html.ValidationMessageFor(model => model.IsShowOnHomepage)
            </div>
        </div>

        <div class="form-group edit-create-buttons">
            <div class="action-button">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
            <div class="back-button btn btn-warning">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}