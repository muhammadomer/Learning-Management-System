<script>
    $("#QuestionType").on("change", function () {
        var id = parseInt($(this).val());
        if (id == 4 || id == 6) {
            $("#Question").attr('readonly', true);
        } else {
            $("#Question").attr('readonly', false);
        }
    });
</script>