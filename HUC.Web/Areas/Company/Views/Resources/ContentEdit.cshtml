<div class="col-md-12" style="padding-left:0px !important;">
    <section class="panel panel-default">
        @*<header class="panel-heading">The Header</header>*@
        <div class="panel-body">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", @id = "submitform" }))
            {
                @Html.AntiForgeryToken()

                <div class="edit-create-form" style="margin-top:12px;">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x => x.ID)
                    @Html.HiddenFor(x => x.ChapterID)
                    @Html.HiddenFor(x => x.ContentType)
                    @Html.HiddenFor(x => x.Sort)
                    <style>
                        body {
                            font-size: 18px !important;
                        }
                    </style>
                    <div class="form-group">
                        <div class="input-field full">
                            @Html.EditorFor(x => x, "ChapterContent")
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="action-button" style="float:left !important; margin:2px !important;">
                            <input type="button" id="btSubmit" value="Update" class="btn btn-dark" />
                        </div>
						<a href ="/TrainingCourses/Company/Resources/View/@Model.Chapter.ResourceID" class="btn btn-secondary m-btn m-btn--custom" style="float:left;margin:2px !important;border: 1px solid darkgrey;">Cancel</a>
                    </div>
                </div>
            }
        </div>
    </section>
</div>
<script>
    $(document).ready(function () {
	 $(".intro-text").removeClass("button-deactive");
        $(".btn-3").css("color", "#ffffff !important");
        $(".align-top-content").removeClass("button-deactive");
        $(".align-top-content").addClass("button-active");
        $(".col-md-1").hide();
    })
</script>
