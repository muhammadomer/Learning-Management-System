@using BotDetect.Web.UI.Mvc
@using HUC.Web.Models
@model HUC.Web.App.PageModels.Forms.ContactFormModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.PageData = new PageDataModel
    {
        Title = "Contact Us",
        ContentTitle = "Contact Us",
        ActivePage = "contact",
        Breadcrumb = new List<BreadcrumbItem>
        {
            new BreadcrumbItem("contact us")
        }
    };
}



<div class="standard-bg">
    <div class="container">
        <div class="content">
            <div class="width-50">
                <div class="contact-details">
                    <div>
                        <h2>How to find us</h2>
                        <p>
                            Training Courses Ltd,<br />
                            Wyre Forest House,<br />
                            Fine Point Way,<br />
                            Kidderminster,<br />
                            Worcestershire,<br />
                            DY11 7WF
                        </p>
                    </div>
                    <div>
                        <h2>Phone number</h2>
                        <p>
                            01562 732250
                        </p>
                    </div>
                    <div>
                        <h2>Email address</h2>
                        <p>
                            <a href="mailto:info@headsupcompliance.co.uk">
                                info&#64;headsupcompliance.co.uk
                            </a>
                        </p>
                    </div>
                    <div class="full">
                        @using (Html.BeginForm())
                        {
                            <h2>Send us a message...</h2>
                            @Html.TextBoxFor(x => x.Name, new { placeholder = "Your name" })
                            @Html.TextBoxFor(x => x.Email, new { placeholder = "Email address" })
                            @Html.TextAreaFor(x => x.Message, new { placeholder = "Your message..." })
 
                            @Html.Captcha(new MvcCaptcha("SampleCaptcha"))
                            
                            @Html.TextBox("CaptchaCode", null, new { placeholder = "Enter Captcha Code...", style="margin-top:20px;" })
                            
                            <input class="large-button orange" type="submit" value="Send" />
                            
                            @Html.ValidationMessage("CaptchaCode")
                        }
                    </div>
                </div>
            </div>

            <div class="width-50">
                <div class="contact-map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3374.877960886858!2d-2.270502670736867!3d52.35928149752489!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xf61bb7b9585687f5!2sWyre+Forest+District+Council!5e0!3m2!1sen!2suk!4v1473082665944" width="600" height="450" frameborder="0" style="border: 0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
